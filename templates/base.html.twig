<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block home_link %}
    {% if app.user %}
        <header class="container">
            <nav class="navbar navbar-expand-lg navbar-light bg-white">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse">
                        {% set routeName = app.request.attributes.get("_route") %}

                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            {% block navigation %}
                                <li class="nav-item">
                                    <a class="nav-link {% if routeName == 'app_wallet_index' %}active{% endif %}"
                                       aria-current="page" href="{{ path('app_wallet_index') }}">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% if routeName == 'app_records' %}active{% endif %}"
                                       href="{{ path('app_records') }}">All records</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link {% if routeName == 'app_wallet_create' %}active{% endif %}"
                                       href="{{ path('app_wallet_create') }}">Create wallet</a>
                                </li>
                                <li class="nav-item">
                                    {% include 'logout.twig' %}
                                </li>
                            {% endblock %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    {% endif %}
{% endblock %}


{% block messages %}
    {% include 'flash-messages.twig' %}
{% endblock %}

{% block body %}{% endblock %}
</body>
</html>