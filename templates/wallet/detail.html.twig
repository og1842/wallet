{% extends 'base.html.twig' %}

{% block body %}
    <div>Name {{ wallet.name }}</div>
    <div>Type {{ wallet.walletTypeForView }}</div>
    <div>Balance {{ wallet.balanceForView }}</div>
    <div>Created at {{ wallet.createdAt.format('Y-m-d') }}</div>

    Fill balance

    <form action="{{ path('app_wallet_fill', {'id': wallet.id}) }}" method="post">
        <label>Enter amount to fill
            <input type="number" value="10.88" name="amount" min="0.01" max="99999999" step="0.01" required="required" autocomplete="off">
        </label>

        <label>Enter record name
            <input type="text" name="name" value="" required="required" autocomplete="off">
        </label>

        <button type="submit">Fill</button>
    </form>

    <br>
    <a href="{{ path('app_wallet_delete', {'id': wallet.id}) }}">Delete wallet</a>
    <a href="{{ path('app_wallet_records', {'walletId': wallet.id}) }}">Wallet records</a>
{% endblock %}